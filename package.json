{
  "name": "nextjs",
  "version": "1.0.0",
  "description": "nextjs boilerplate",
  "main": "server.js",
  "scripts": {
    "dev": "node server.js",
    "build": "next build ./src",
    "start": "NODE_ENV=production node server.js",
    "export": "npm run build && next export",
    "lint:js": "eslint --cache --format=node_modules/eslint-formatter-pretty . && flow .",
    "lint:css": "stylelint src/styles/*.scss --syntax scss",
    "flow-typed": "rimraf flow-typed/npm && flow-typed install --overwrite || true",
    "clean": "rimraf dist && rimraf flow-typed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/han0110/boilerplate-nextjs"
  },
  "author": "Jason Jian",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.5.0",
    "koa-router": "^7.4.0",
    "next": "^5.1.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "devDependencies": {
    "@zeit/next-sass": "^0.1.2",
    "babel-eslint": "^8.2.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.11",
    "flow-bin": "^0.69.0",
    "flow-typed": "^2.4.0",
    "node-sass": "^4.8.3",
    "rimraf": "^2.6.2",
    "stylelint": "^9.2.0",
    "url-loader": "^1.0.1"
  }
}
